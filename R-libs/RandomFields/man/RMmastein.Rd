\keyword{spatial}
\keyword{models}



\examples{
set.seed(0)
model <- RMmastein(RMgauss(), nu=1, delta=10)
x <- seq(0, 10, if (interactive()) 0.1 else 3) 
plot(RFsimulate(model, x=x, y=x))
}